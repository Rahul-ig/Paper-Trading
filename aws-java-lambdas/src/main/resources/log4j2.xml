<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <!-- Lambda-optimized appender: single-line JSON for CloudWatch -->
        <Console name="Lambda" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{ISO8601} %p %c{1.} [%t] %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.trading" level="INFO" additivity="false">
            <AppenderRef ref="Lambda"/>
        </Logger>
        <!-- Reduce noise from AWS SDK -->
        <Logger name="software.amazon.awssdk" level="WARN" additivity="false">
            <AppenderRef ref="Lambda"/>
        </Logger>
        <Logger name="org.apache.http" level="WARN" additivity="false">
            <AppenderRef ref="Lambda"/>
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="Lambda"/>
        </Root>
    </Loggers>
</Configuration>
