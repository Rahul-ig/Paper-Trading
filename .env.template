# AWS Crypto & Forex Trading System Configuration
# Copy this file to .env and update the values as needed

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Stack Configuration
STACK_NAME=crypto-forex-trading-system
S3_BUCKET=forex-ai-models

# Trading Configuration
INITIAL_BALANCE=50.0
RISK_PERCENTAGE=2.0
MAX_POSITION_SIZE=10.0

# API Keys (Required for production)
# Get these from respective providers:
# CoinGecko: https://www.coingecko.com/en/api
# Alpha Vantage: https://www.alphavantage.co/support/#api-key
# NewsAPI: https://newsapi.org/

COINGECKO_API_KEY=your_coingecko_api_key_here
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
NEWS_API_KEY=your_news_api_key_here

# Trading Pairs Configuration
CRYPTO_SYMBOLS=bitcoin,ethereum,binancecoin,cardano,solana,polkadot,chainlink,litecoin,avalanche-2,polygon
FOREX_PAIRS=EUR/USD,GBP/USD,USD/JPY,USD/CHF,AUD/USD,USD/CAD,NZD/USD

# AI Model Configuration
TRAINING_INTERVAL_HOURS=6
MODEL_HISTORY_DAYS=30
FEATURE_WINDOW_HOURS=24

# Risk Management
STOP_LOSS_PERCENTAGE=5.0
TAKE_PROFIT_PERCENTAGE=10.0
MAX_DAILY_TRADES=10
MAX_OPEN_POSITIONS=5

# System Configuration
LOG_LEVEL=INFO
TIMEZONE=UTC

# Dashboard Configuration
DASHBOARD_TITLE=Crypto & Forex AI Trading System
DASHBOARD_REFRESH_INTERVAL=30000
CHART_HISTORY_POINTS=100

# DynamoDB Configuration
CRYPTO_PRICES_TABLE_TTL=2592000  # 30 days in seconds
FOREX_PRICES_TABLE_TTL=2592000   # 30 days in seconds
NEWS_DATA_TABLE_TTL=604800       # 7 days in seconds

# CloudWatch Configuration
LOG_RETENTION_DAYS=14
METRICS_NAMESPACE=TradingSystem

# Performance Tuning
LAMBDA_MEMORY_SIZE=512
LAMBDA_TIMEOUT=300
CONCURRENCY_LIMIT=10